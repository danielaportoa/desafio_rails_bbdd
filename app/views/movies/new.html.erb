<h1>Formulario Movies</h1>

<%= form_with model: @movie, method: :post do |form| %>
    <div class="col-4">
        <div>
            <%= form.label :title, "Title", class: "form-label" %>
            <%= form.text_field :title, class: "form-control" %>
        </div>
        <div>
            <%= form.label :title_original, "Title original", class: "form-label"%>
            <%= form.text_field :title_original, class: "form-control" %>
        </div>
        <div>
            <%= form.label :director, "Director", class: "form-label"%>
            <%= form.text_field :director, class: "form-control" %>
        </div>
        <div>
            <%= form.label :year, "Year", class: "form-label"%>
            <%= form.text_field :year, class: "form-control" %>
        </div>
        <div>
            <%= form.label :country, "Country", class: "form-label"%>
            <%= form.text_field :country, class: "form-control" %>
        </div>
        <div>
            <%= form.label :duration, "Duration", class: "form-label"%>
            <%= form.text_field :duration, class: "form-control" %>
        </div>
        <div>
            <%= form.label :sinopsis, "Sinopsis", class: "form-label"%>
            <%= form.text_field :duration, class: "form-control" %>
        </div>
        <div>
            <%= form.submit "Enviar", class: "btn btn-primary" %>
        </div>
    </div>
<% end %>
